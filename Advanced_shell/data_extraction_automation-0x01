#!/usr/bin/env bash
# data_extraction_automation-0x01
# Extract Pok√©mon data from data.json using jq, awk, and sed

# Extract fields with jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')
formatted_weight=$(jq -r '.weight' data.json | awk '{print $1/10}' | sed 's/\.0$//')
formatted_height=$(jq -r '.height' data.json | awk '{print $1/10}')

# Output in exact required format
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
